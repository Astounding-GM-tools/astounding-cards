# Legacy local database (not used in Phase 1)
# DATABASE_URL=file:local.db

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Public keys (safe to expose in browser)
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Private keys (NEVER expose in browser, server-only)
# New key system (preferred)
# The secret API key also enables local dev auth bypass - see docs below
SUPABASE_SECRET_API_KEY=your-secret-api-key-here

# Cloudflare R2 Object Storage (S3-compatible API)
# Get these from: https://dash.cloudflare.com -> R2 -> Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=astounding-cards-images
PUBLIC_R2_PATH_PREFIX=dev  # Use 'dev' for local/staging, 'prod' for production
PUBLIC_R2_PUBLIC_URL=https://pub-abc123xyz.r2.dev  # Public Development URL from R2 dashboard

# Images will be stored at: ${PUBLIC_R2_PATH_PREFIX}/cards/${cardId}.png
# Endpoint is constructed as: https://${R2_ACCOUNT_ID}.r2.cloudflarestorage.com
# Public URL: ${PUBLIC_R2_PUBLIC_URL}/${PUBLIC_R2_PATH_PREFIX}/cards/${cardId}.png

# Gemini AI (existing)
GEMINI_API_KEY=your-gemini-api-key-here

# Lemon Squeezy Payment Integration
# Get these from: https://app.lemonsqueezy.com/settings/api
LEMON_SQUEEZY_API_KEY=your_api_key  # Create API key in Settings → API
LEMON_SQUEEZY_STORE_ID=your_store_id  # Found in Settings → Stores
LEMON_SQUEEZY_PRODUCT_ID=your_product_id  # The "Token Packs" product ID (must have package pricing enabled)
LEMON_SQUEEZY_WEBHOOK_SECRET=your_webhook_secret  # Create webhook, copy signing secret
LEMON_SQUEEZY_TEST_MODE=true  # Use 'true' for development, 'false' for production

# Important:
# - Product variants MUST have package pricing enabled (set package_size to token count)
# - For local testing, use ngrok to tunnel webhooks (see docs/WEBHOOK_TESTING.md)
# - Test card: 4242 4242 4242 4242
