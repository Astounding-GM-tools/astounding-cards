name: Deploy Database Migrations

# Run on push to main branch
on:
  push:
    branches: [main]
    paths:
      - 'supabase/migrations/**'
      - '.github/workflows/deploy-supabase.yml'

# Or run manually
  workflow_dispatch:

jobs:
  deploy-migrations:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Apply Supabase Migrations to Production
        env:
          SUPABASE_ACCESS_TOKEN: ${{ secrets.SUPABASE_ACCESS_TOKEN }}
          SUPABASE_PROJECT_REF: ${{ secrets.SUPABASE_PROD_PROJECT_REF }}
        run: |
          echo "üîó Linking to Supabase project..."
          npx supabase link --project-ref $SUPABASE_PROJECT_REF

          echo "üìã Checking migration status..."
          npx supabase migration list

          echo "üöÄ Applying migrations..."
          npx supabase db push

          echo "‚úÖ Migrations applied successfully!"

      - name: Verify Deployment
        env:
          SUPABASE_ACCESS_TOKEN: ${{ secrets.SUPABASE_ACCESS_TOKEN }}
          SUPABASE_PROJECT_REF: ${{ secrets.SUPABASE_PROD_PROJECT_REF }}
        run: |
          echo "üîç Verifying migrations..."
          npx supabase migration list

# Required GitHub Secrets:
# - SUPABASE_ACCESS_TOKEN: Get from https://supabase.com/dashboard/account/tokens
# - SUPABASE_PROD_PROJECT_REF: Your production project ref (from URL)
